        function generateSensiDatabase() {
            const baseConfigs = {
                samsung: { geral: [118, 140], pontoVermelho: [82, 102], mira2x: [85, 100], mira4x: [88, 106], miraAWM: [8, 18], olhadinha: [92, 112], dpi: [395, 445] },
                apple: { geral: [105, 128], pontoVermelho: [72, 92], mira2x: [75, 95], mira4x: [80, 98], miraAWM: [5, 14], olhadinha: [85, 102], dpi: [365, 410] },
                motorola: { geral: [132, 155], pontoVermelho: [92, 112], mira2x: [90, 108], mira4x: [95, 115], miraAWM: [12, 20], olhadinha: [100, 120], dpi: [415, 460] },
                emulador: { geral: [95, 118], pontoVermelho: [65, 85], mira2x: [68, 88], mira4x: [72, 92], miraAWM: [3, 10], olhadinha: [78, 95], dpi: [330, 380] },
                xiaomi: { geral: [125, 148], pontoVermelho: [85, 105], mira2x: [88, 105], mira4x: [92, 110], miraAWM: [10, 18], olhadinha: [95, 115], dpi: [400, 445] },
                lg: { geral: [115, 138], pontoVermelho: [78, 98], mira2x: [82, 100], mira4x: [86, 105], miraAWM: [7, 15], olhadinha: [88, 108], dpi: [385, 430] }
            };

            Object.keys(baseConfigs).forEach(device => {
                const config = baseConfigs[device];
                for (let i = 0; i < 100; i++) {
                    sensiDatabase[device].push({
                        geral: Math.floor(Math.random() * (config.geral[1] - config.geral[0] + 1)) + config.geral[0],
                        pontoVermelho: Math.floor(Math.random() * (config.pontoVermelho[1] - config.pontoVermelho[0] + 1)) + config.pontoVermelho[0],
                        mira2x: Math.floor(Math.random() * (config.mira2x[1] - config.mira2x[0] + 1)) + config.mira2x[0],
                        mira4x: Math.floor(Math.random() * (config.mira4x[1] - config.mira4x[0] + 1)) + config.mira4x[0],
                        miraAWM: Math.floor(Math.random() * (config.miraAWM[1] - config.miraAWM[0] + 1)) + config.miraAWM[0],
                        olhadinha: Math.floor(Math.random() * (config.olhadinha[1] - config.olhadinha[0] + 1)) + config.olhadinha[0],
                        dpi: Math.floor(Math.random() * (config.dpi[1] - config.dpi[0] + 1)) + config.dpi[0]
                    });
                }
            });
        }
        generateSensiDatabase();

        const usedSensis = {
            samsung: [],
            apple: [],
            motorola: [],
            emulador: [],
            xiaomi: [],
            lg: []
        };

        function gerarSensi() {
            const device = document.getElementById('deviceSelect').value;
            
            if (!device) {
                alert('‚ö†Ô∏è Por favor, selecione um dispositivo!');
                return;
            }

            if (usedSensis[device].length >= sensiDatabase[device].length) {
                if (confirm('‚ùå Todas as sensibilidades para este dispositivo j√° foram geradas!\n\n‚úÖ Deseja resetar e gerar novas?')) {
                    usedSensis[device] = [];
                } else {
                    return;
                }
            }

            let randomIndex;
            do {
                randomIndex = Math.floor(Math.random() * sensiDatabase[device].length);
            } while (usedSensis[device].includes(randomIndex));

            usedSensis[device].push(randomIndex);
            const sensi = sensiDatabase[device][randomIndex];

            const valuesHTML = `
                <div class="sensi-item"><span><i class="fas fa-cog"></i> Geral:</span><span>${sensi.geral}</span></div>
                <div class="sensi-item"><span><i class="fas fa-dot-circle"></i> Ponto Vermelho:</span><span>${sensi.pontoVermelho}</span></div>
                <div class="sensi-item"><span><i class="fas fa-search"></i> Mira 2x:</span><span>${sensi.mira2x}</span></div>
                <div class="sensi-item"><span><i class="fas fa-search-plus"></i> Mira 4x:</span><span>${sensi.mira4x}</span></div>
                <div class="sensi-item"><span><i class="fas fa-crosshairs"></i> Mira AWM:</span><span>${sensi.miraAWM}</span></div>
                <div class="sensi-item"><span><i class="fas fa-eye"></i> Olhadinha:</span><span>${sensi.olhadinha}</span></div>
                <div class="sensi-item"><span><i class="fas fa-mouse"></i> DPI:</span><span>${sensi.dpi}</span></div>
            `;

            document.getElementById('sensiValues').innerHTML = valuesHTML;
            document.getElementById('sensiResult').classList.add('active');
            
            window.currentSensi = sensi;
            window.currentDevice = device;

            const remaining = sensiDatabase[device].length - usedSensis[device].length;
            console.log(`‚úÖ Sensi gerada! Restam ${remaining} sensis √∫nicas para ${device}`);
        }

        function copiarSensi() {
            if (!window.currentSensi) return;
            
            const deviceNames = {
                samsung: 'Samsung',
                apple: 'Apple (iPhone/iPad)',
                motorola: 'Motorola',
                emulador: 'Emulador (PC)',
                xiaomi: 'Xiaomi',
                lg: 'LG'
            };

            const texto = `
üéØ SENSIBILIDADE RIQUELME REGEDITS

üì± Dispositivo: ${deviceNames[window.currentDevice]}

‚öôÔ∏è Geral: ${window.currentSensi.geral}
üî¥ Ponto Vermelho: ${window.currentSensi.pontoVermelho}
üîç Mira 2x: ${window.currentSensi.mira2x}
üîé Mira 4x: ${window.currentSensi.mira4x}
üéØ Mira AWM: ${window.currentSensi.miraAWM}
üëÅÔ∏è Olhadinha: ${window.currentSensi.olhadinha}
üñ±Ô∏è DPI: ${window.currentSensi.dpi}

‚ú® Gerado em: Riquelme Regedits
üîó Baixe: riquelme-regedits.netlify.app
            `.trim();

            navigator.clipboard.writeText(texto).then(() => {
                alert('‚úÖ Sensibilidade copiada para a √°rea de transfer√™ncia!');
            }).catch(() => {
                alert('‚ùå Erro ao copiar. Tente novamente!');
            });
        }

        // Sistema de Login
        let isLoggedIn = false;
        let currentUser = null;

        function fazerLogin() {
            const username = document.getElementById('loginUsername').value.trim();
            const senha = document.getElementById('loginSenha').value;

            if (!username || !senha) {
                alert('‚ùå Por favor, preencha todos os campos!');
                return;
            }

            if (username.length < 3) {
                alert('‚ùå Username deve ter pelo menos 3 caracteres!');
                return;
            }

            if (senha.length < 6) {
                alert('‚ùå Senha deve ter pelo menos 6 caracteres!');
                return;
            }

            isLoggedIn = true;
            currentUser = {
                username: username
            };

            document.getElementById('loginBtn').style.display = 'none';
            document.getElementById('userProfile').style.display = 'flex';
            document.getElementById('userName').textContent = username;
            document.getElementById('userAvatar').textContent = username.charAt(0).toUpperCase();

            alert(`‚úÖ Login realizado com sucesso!\n\nBem-vindo(a), ${username}!`);
            
            document.getElementById('loginUsername').value = '';
            document.getElementById('loginSenha').value = '';

            showSection('gerador');
        }

        function enviarParceria() {
            const nome = document.getElementById('parceriaNome').value.trim();
            const motivos = document.getElementById('parceriaMotivos').value.trim();

            if (!nome || !motivos) {
                alert('‚ùå Por favor, preencha todos os campos!');
                return;
            }

            if (motivos.length < 50) {
                alert('‚ö†Ô∏è Por favor, descreva melhor os motivos da parceria (m√≠nimo 50 caracteres).');
                return;
            }

            const mensagem = `ü§ù *PROPOSTA DE PARCERIA - RIQUELME REGEDITS*

üë§ *Nome:* ${nome}

üìã *Motivos da Parceria:*
${motivos}

---
_Enviado via Riquelme Regedits_`;

            const mensagemEncoded = encodeURIComponent(mensagem);
            const whatsappURL = `https://wa.me/5574999620423?text=${mensagemEncoded}`;
            
            window.open(whatsappURL, '_blank');

            document.getElementById('parceriaNome').value = '';
            document.getElementById('parceriaMotivos').value = '';
        }

        function adicionarProduto() {
            if (!isLoggedIn) {
                document.getElementById('loginModal').classList.add('active');
                return;
            }

            const titular = document.getElementById('produtoTitular').value.trim();
            const imagem = document.getElementById('produtoImagem').value.trim();
            const preco = document.getElementById('produtoPreco').value.trim();
            const contato = document.getElementById('produtoContato').value.trim();

            if (!titular || !imagem || !preco || !contato) {
                alert('‚ùå Por favor, preencha todos os campos!');
                return;
            }

            try {
                new URL(imagem);
            } catch {
                alert('‚ùå URL da imagem inv√°lida! Por favor, insira um link v√°lido.');
                return;
            }

            alert(`üí∞ TAXA DE PUBLICA√á√ÉO: R$ 2,00

‚úÖ Para finalizar a publica√ß√£o, voc√™ ser√° redirecionado para o pagamento.

üì¶ Dados do Produto:
‚Ä¢ Titular: ${titular}
‚Ä¢ Pre√ßo: ${preco}
‚Ä¢ Contato: ${contato}

‚è±Ô∏è Seu produto ser√° publicado em at√© 24 horas ap√≥s a confirma√ß√£o do pagamento!`);
            
            document.getElementById('produtoTitular').value = '';
            document.getElementById('produtoImagem').value = '';
            document.getElementById('produtoPreco').value = '';
            document.getElementById('produtoContato').value = '';
        }

        function closeModal() {
            document.getElementById('loginModal').classList.remove('active');
        }

        function irParaLogin() {
            closeModal();
            showSection('login');
        }

        window.onclick = function(event) {
            const modal = document.getElementById('loginModal');
            if (event.target == modal) {
                closeModal();
            }
        }

        document.addEventListener('click', function(event) {
            const navLinks = document.getElementById('navLinks');
            const menuToggle = document.querySelector('.menu-toggle');
            
            if (navLinks.classList.contains('active') && 
                !navLinks.contains(event.target) && 
                !menuToggle.contains(event.target)) {
                navLinks.classList.remove('active');
                menuToggle.classList.remove('active');
            }
        });
    </script>
