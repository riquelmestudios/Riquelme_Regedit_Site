    <script>
        // Criar Part√≠culas OTIMIZADAS
        function createParticles() {
            const particlesContainer = document.getElementById('particles-js');
            // Reduzido para 40 part√≠culas para melhor performance
            const particleCount = 40;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                const isGlow = Math.random() > 0.8;
                
                particle.className = isGlow ? 'particle-glow' : 'particle';
                
                const size = isGlow ? Math.random() * 30 + 15 : Math.random() * 3 + 2;
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                particle.style.left = Math.random() * 100 + '%';
                
                const opacity = Math.random() * 0.5 + 0.2;
                particle.style.background = `rgba(220, 38, 38, ${opacity})`;
                
                const delay = Math.random() * 20;
                const duration = Math.random() * 15 + 15;
                const xMove = (Math.random() - 0.5) * 150;
                
                particle.style.setProperty('--x-move', xMove + 'px');
                particle.style.animation = `particleFloat ${duration}s linear ${delay}s infinite`;
                
                if (!isGlow && Math.random() > 0.5) {
                    particle.style.animation += `, particlePulse ${Math.random() * 2 + 2}s ease-in-out infinite`;
                }
                
                particlesContainer.appendChild(particle);
            }
        }
        

        // Sistema de An√∫ncios a cada 60 segundos
        let currentAdSection = 'regedits';
        
        function showAd() {
            const adBanner = document.getElementById('adBanner');
            adBanner.classList.add('active');
            adBanner.onclick = function() {
                showSection(currentAdSection);
                adBanner.classList.remove('active');
            };
            
            setTimeout(() => {
                adBanner.classList.remove('active');
            }, 8000);
        }

        // Mostrar an√∫ncio a cada 60 segundos
        setInterval(showAd, 60000);
        setTimeout(showAd, 10000); // Primeiro an√∫ncio ap√≥s 10s

        // Toggle Menu
        function toggleMenu() {
            const navLinks = document.getElementById('navLinks');
            const menuToggle = document.querySelector('.menu-toggle');
            navLinks.classList.toggle('active');
            menuToggle.classList.toggle('active');
        }

        // Navega√ß√£o
        function showSection(sectionId) {
            const sections = document.querySelectorAll('section');
            sections.forEach(section => section.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
            
            if (window.innerWidth <= 1024) {
                const navLinks = document.getElementById('navLinks');
                const menuToggle = document.querySelector('.menu-toggle');
                navLinks.classList.remove('active');
                menuToggle.classList.remove('active');
            }
            
            window.scrollTo({top: 0, behavior: 'smooth'});
        }

